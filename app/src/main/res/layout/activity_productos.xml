<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Productos"
    android:background="#ffff">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PRODUCTOS"
        android:gravity="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt"
        android:padding="2dp"
        android:src="@drawable/producto" />

    <EditText
        android:id="@+id/producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:hint="@string/ItemProducto"
        android:inputType="textPersonName|textCapWords"
        android:padding="10dp"
        android:background="@drawable/background"/>

    <EditText
        android:id="@+id/marca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/producto"
        android:hint="@string/Marca"
        android:inputType="textPersonName|textCapWords"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background"/>

    <EditText
        android:id="@+id/descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/marca"
        android:hint="@string/Descripcion"
        android:inputType="textPersonName|textCapWords"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background" />

    <EditText
        android:id="@+id/precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descripcion"
        android:hint="@string/ItemPrecio"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background"/>

    <Button
        android:id="@+id/apdBAgregar"
        android:layout_margin="10dp"
        android:background="@drawable/addbutton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/precio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/btnMostrarAmigos"
        android:layout_below="@+id/apdBAgregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Mostrar Productos"/>

</RelativeLayout>